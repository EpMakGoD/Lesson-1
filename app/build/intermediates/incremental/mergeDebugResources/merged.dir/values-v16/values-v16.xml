<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="notification_right_side_padding_top">4dp</dimen>
    <style name="TextAppearance.AppCompat.Tooltip">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="YSKTheme.MainText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/ysk_main_text_bottom_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ysk_main_text_size</item>
        <item name="android:textColor">?ysk_main_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>